:root{
--accent:#FF6F61;
--dark:#222;
--muted:#666;
--bg:#fff;
}
*{box-sizing:border-box}
body{
font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica
Neue", Arial;
margin:0;
color:var(--dark);
background:linear-gradient(180deg,#fff,#f7fbff);
-webkit-font-smoothing:antialiased;
}
.site-header{
display:flex;
justify-content:space-between;
align-items:center;
padding:18px 24px;
background:linear-gradient(90deg,#ffffffee,#fff0);
border-bottom:1px solid #eee;
position:sticky;
top:0;
z-index:20;
}
.brand h1{margin:0;font-size:20px}
.tagline{margin:2px 0 0;font-size:13px;color:var(--muted)}
.top-nav
a{margin-left:12px;text-decoration:none;color:var(--dark);font-weight:600}
.hero{
padding:48px 16px;
text-align:center;
background:linear-gradient(90deg,#ffefd6,#fff0);
}
.hero-inner h2{margin:0 0 8px;font-size:24px}
.btn{
display:inline-block;margin-top:12px;padding:10px
16px;background:var(--accent);color:#fff;border-radius:8px;text-decoration:none;font-weight:700;
}
.gallery-section{padding:24px 16px}
.gallery-grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(150px,1fr));
gap:12px;
margin-top:12px;
}
.card{
background:#fff;border-radius:10px;overflow:hidden;box-shadow:0 4px 10px
rgba(0,0,0,0.06);text-align:center;padding-bottom:10px;
}
.card img{width:100%;height:140px;object-fit:cover;display:block}
.card p{margin:8px 10px 0;font-weight:600}
.about-section, .contact-section{padding:18px
16px;background:#fff;margin-top:12px;border-top:1px solid #f0f0f0}
.small{font-size:12px;color:var(--muted)}
.site-footer{
padding:14px 16px;text-align:center;font-size:13px;color:var(--muted);
border-top:1px solid #eee;background:#fff;margin-top:18px;
}

/* Mobile performance */
@media (prefers-reduced-motion:reduce){*{transition:none!important}}

